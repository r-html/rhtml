{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./typings.d.ts"],
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "esnext.asynciterable",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./typings.d.ts",
    "./src/**/*"
  ]
}
