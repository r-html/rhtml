{
  "name": "@rxdi/rhtml",
  "version": "0.0.1",
  "description": "Reactive HyperText Markup Language",
  "bolt": {
    "workspaces": [
      "packages/*",
      "examples"
    ]
  },
  "scripts": {
    "bolt": "npx bolt && rm -rf ./packages/graphql/node_modules/@rxdi/lit-html ./packages/components/node_modules/@rxdi/lit-html ./packages/renderer/node_modules/@rxdi/lit-html ./packages/operators/node_modules/@rxdi/lit-html ./packages/experiments/node_modules/@rxdi/lit-html",
    "start": "parcel ./examples/main/index.html --out-dir build/examples/main",
    "start-hydrate": "parcel ./examples/hydrate/index.html --out-dir build/examples/hydrate",
    "build-docs": "parcel build ./examples/index.html --out-dir docs --experimental-scope-hoisting --public-url rhtml",
    "patch": "bolt ws exec -- npm run patch",
    "clean": "git clean -dxf",
    "build": "rm -rf dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rxdi/rhtml.git"
  },
  "author": "Kristiyan Tachev",
  "license": "MIT",
  "devDependencies": {
    "husky": "^3.0.9",
    "typescript": "^3.7.3"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "dependencies": {
    "@rxdi/core": "^0.7.40",
    "@rxdi/graphql-client": "^0.7.38",
    "@rxdi/lit-html": "^0.7.42",
    "shades": "^2.1.0",
    "rxjs": "^6.5.3",
    "graphql": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0",
    "graphql-tag": "^2.10.1"
  }
}
